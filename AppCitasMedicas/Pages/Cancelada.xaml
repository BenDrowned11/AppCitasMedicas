<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCitasMedicas.Cancelada">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Label
            Text="App De Citas"
            FontSize="30"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            Margin="0,20,0,20" />

        <Label
            Text="Cita Cancelada"
            FontSize="24"
            HorizontalOptions="Center" />

        <Label
            Text="La cita ha sido cancelada."
            FontSize="18"
            HorizontalOptions="Center" />

        <Button
            Text="Aceptar"
            Clicked="OnAcceptClicked"
            HorizontalOptions="Fill"
            BackgroundColor="Green"
            TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>
